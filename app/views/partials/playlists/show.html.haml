.playlist-container{ ng_if: 'playlist', ng_controller: 'PlaylistCtrl' }
  .name
    %h3 {{playlist.name}}

  .player
    %h3 Audio Player

  .songs
    %h3 Songs
    .playlist-song-list{ ng_repeat: "song in playlist.playlist_songs | orderBy:'vote_count':true" }
      %span.name {{song.path}}
      %span.votes {{song.vote_count}} votes
      %i.upvote.general-enclosed.foundicon-plus{ ng_hide: "song.decision == 1", ng_click: "upvoteSong(song)" }
      %i.downvote.general-enclosed.foundicon-minus{ ng_hide: "song.decision == -1", ng_click: "downvoteSong(song)" }
