.playlist-container{ ng_if: 'playlist', ng_controller: 'PlaylistCtrl' }
  .name
    %h3 {{playlist.name}}

  .player
    %h3 Audio Player

  .songs
    %h3 Songs
    .playlist-song-list{ ng_repeat: "song in playlist.playlist_songs | orderBy:'vote_count':true" }
      %span.name {{song.path}}
      %span.votes {{song.vote_count}} votes
      .btn.btn-success
        %i.upvote.icon-arrow-up{ ng_hide: "song.current_consumer_vote_decision == 1", ng_click: "upvoteSong(song)" }
      .btn.btn-danger
        %i.downvote.icon-arrow-down{ ng_hide: "song.current_consumer_vote_decision == -1", ng_click: "downvoteSong(song)" }
