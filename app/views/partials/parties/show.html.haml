.party-container{ ng_if: 'party', ng_controller: 'PartyCtrl' }
  .name
    %h3 {{party.name}}

  .player
    %h3 Audio Player

  .songs
    %h3 Songs
    .playlist-song-list{ ng_repeat: 'song in party.playlists' }
      %span.name {{song.path}}
      %span.votes {{song.up_votes - song.down_votes}}
      %i.upvote.general.foundicon-upvote{ ng_click: "upvoteSong(song)" }
      %i.downvote.general.foundicon-downvote{ ng_click: "downvoteSong(song)" }
