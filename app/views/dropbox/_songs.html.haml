.user-dropbox-songs{ ng_if: 'user.dropbox_songs', ng_controller: 'SongsCtrl' }
  %button.btn{ ng_click: "showDropboxSongs = !showDropboxSongs" }
    Dropbox Songs
  %div{ collapse: "!showDropboxSongs" }
    %h3 {{user.first_name}}'s Dropbox Songs
    .dropbox-songs-list{ ng_repeat: 'song in user.dropbox_songs' }
      %span.name {{song.path}}
    %button.btn{ ng_click: "refreshDropboxSongs()" }
      %i.icon-refresh
