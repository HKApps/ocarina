.player-container{ ng_controller: "PlaybackCtrl", ocarina_if: "playlist.owner_id == user.id" }
  .currently-playing.wordwrap{ ng_show: "player.currentSong && isPlayingPlaylist()" }
    {{player.currentSong.song_name}}
  .playback-controls
    %button.btn.btn-default.control.play{ ng_click: "playerAction('play')", ng_show: "player.state != 'playing' || !isPlayingPlaylist()" }
      = image_tag "audio_play.png"
    %button.btn.btn-default.control.pause{ ng_click: "playerAction('pause')", ng_show: "player.state == 'playing' && isPlayingPlaylist()" }
      = image_tag "audio_pause.png"
    %button.btn.btn-default.control.skip{ ng_click: "playerAction('skip')" } Skip
  .progressbar-container
    .progressbar
      %span.bufferbar
      %span.timebar
    .time
      %span.current-time
      %span.duration

.player-container{ ocarina_if: "playlist.owner_id != user.id" }
  .currently-playing.wordwrap{ ng_show: "playlist.currentSong" }
    {{playlist.currentSong.song_name}}
  .nothing-playing{ ng_show: "!playlist.currentSong" }
    "tell the host to get this party started!"
